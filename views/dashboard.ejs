<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>OtakuShelf - Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/base.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
  <div class="admin-container">
    <div class="sidebar">
      <h1>ADMIN</h1>
      <nav>
        <a href="/dashboard" class="active">Dashboard</a>
        <a href="/manga">Manga</a>
        <a href="/chapters">Chapters</a>
        <a href="/logout">Log Out</a>
      </nav>
    </div>

    <!-- Main Content -->
    <div class="dashboard-container">
      <h1>Admin Dashboard</h1>
      <div class="stats">
        <div class="stat-card">
          <h2>Total Mangas</h2>
          <p>
            <%= totalMangas %>
          </p>
        </div>
        <div class="stat-card">
          <h2>Total Users</h2>
          <p>
            <%= totalUsers %>
          </p>
        </div>
        <div class="stat-card">
          <h2>Total Genres</h2>
          <p>
            <%= totalGenres %>
          </p>
        </div>
      </div>

      <div class="recent-uploads">
        <h2>Recent Uploads</h2>
        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>Uploaded At</th>
            </tr>
          </thead>
          <tbody>
            <% recentUploads.forEach(manga=> { %>
              <% console.log(recentUploads); %>
              <% console.log(manga.cover_url); %>
                <tr>
                  <td style="display: flex; align-items: center; gap: 10px;">
                    <img src="<%= manga.cover_url %>" alt="<%= manga.title %>"
                      style="width: 40px; height: 40px; object-fit: cover; border-radius: 8px;">
                    <span>
                      <%= manga.title %>
                    </span>
                  </td>

                  <td>
                    <%= manga.author %>
                  </td>
                  <td>
                    <%= new Date(manga.created_at).toLocaleString() %>
                  </td>
                </tr>
                <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    </section>
    </main>
  </div>
</body>

</html>