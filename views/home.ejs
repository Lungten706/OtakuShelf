<!-- views/home.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>OtakuShelf - Home</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

  <header>
    <nav>
      <h2>OtakuShelf</h2>
      <ul>
        <li><a href="/home">Home</a></li>
        <li><a href="/genres">Genres</a></li>
        <li><a href="/history">History</a></li>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
      </ul>
    </nav>
  </header>
  <main class="home-container">
    <h2 class="section-title">LATEST MANGA UPDATES</h2>
    <div class="manga-grid">
      <% if (mangas.length> 0) { %>
        <% mangas.forEach(manga=> { %>
          <div class="manga-card">
            <a href="/manga/<%= manga.id %>">
              <img src="<%= manga.cover_url %>" alt="<%= manga.title %>">
              <h2>
                <%= manga.title %>
              </h2>
            </a>

          </div>
          <% }); %>
            <% } else { %>
              <p>No manga available</p>
              <% } %>
    </div>
  </main>

</body>

</html>