<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>OkatsuShelf - Home</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <!-- Navigation -->
  <header>
    <nav>
      <h2>OkatsuShelf</h2>
      <ul>
        <li><a href="/login">Login</a></li>
      </ul>
    </nav>
  </header>

  <!-- Hero Section -->
  <main>
    <section class="hero-section">
      <h1>Welcome to <span>OkatsuShelf</span></h1>
      <p>Discover your next favorite manga</p>
      <a class="btn" href="/signup">Sign Up</a>
    </section>

    <!-- Featured Manga Section -->
    <section class="featured">
      <h3>Featured Manga</h3>
      <div class="manga-cards">
        <% if (mangas.length> 0) { %>
          <% mangas.forEach(manga=> { %>
            <div class="card">
              <img src="<%= manga.cover_url %>" alt="<%= manga.title %>">
              <p>
                <%= manga.title %>
              </p>
            </div>
            <% }) %>
              <% } else { %>
                <p>No manga available at the moment.</p>
                <% } %>
      </div>

    </section>
  </main>
</body>

</html>