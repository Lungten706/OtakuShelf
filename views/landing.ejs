<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>OkatsuShelf - Home</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Navigation -->
  <header>
    <nav>
      <h2>OkatsuShelf</h2>
      <ul>
        <li><a href="/login">Login</a></li>
      </ul>
    </nav>
  </header>

  <!-- Hero Section -->
  <main>
    <section class="hero-section">
      <h1>Welcome to <span>OkatsuShelf</span></h1>
      <p>Discover your next favorite manga</p>
      <a class="btn" href="/signup">Sign Up</a>
    </section>

    <!-- Featured Manga Section -->
    <section class="featured">
      <h3>Featured Manga</h3>
      <div class="manga-cards">
        <div class="card">
          <img src="/images/attrack.jpg" alt="Attack on Titan">
          <p>Attack on Titan</p>
        </div>
        <div class="card">
          <img src="/images/naruto.jpg" alt="Naruto">
          <p>Naruto</p>
        </div>
        <div class="card">
          <img src="/images/hero.jpg" alt="My Hero Academia">
          <p>My Hero Academia</p>
        </div>
      </div>
    </section>
  </main>
</body>
</html>
