<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= manga.title %> - Chapters</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background: #1a1a1a;
      color: white;
    }

    .manga-container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .manga-header {
      background: #2a2a2a;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 20px;
      display: flex;
      gap: 30px;
    }

    .manga-cover {
      width: 250px;
      height: 350px;
      object-fit: cover;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .manga-details {
      flex: 1;
    }

    .manga-title {
      color: white;
      margin: 0 0 15px 0;
      font-size: 2em;
    }

    .manga-info {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
    }

    .info-item {
      background: #3a3a3a;
      padding: 15px;
      border-radius: 6px;
    }

    .info-label {
      color: #8b5cf6;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .info-value {
      color: white;
    }

    .chapter-container {
      background: #2a2a2a;
      padding: 20px;
      border-radius: 8px;
    }

    .button-group {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    .action-btn {
      padding: 10px 20px;
      background: #8b5cf6;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
      transition: background 0.3s;
    }

    .action-btn:hover {
      background: #7c3aed;
    }

    .chapter-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .chapter-item {
      padding: 15px;
      border-bottom: 1px solid #3a3a3a;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .chapter-item:last-child {
      border-bottom: none;
    }

    .chapter-title {
      flex: 1;
      color: white;
    }

    .read-btn {
      padding: 8px 16px;
      background: #8b5cf6;
      color: white;
      border: none;
      border-radius: 4px;
      text-decoration: none;
      transition: background 0.3s;
    }

    .read-btn:hover {
      background: #7c3aed;
    }
  </style>
</head>
<body>
  <div class="manga-container">
    <div class="manga-header">
      <img src="<%= manga.cover_url || '/images/default-cover.png' %>" alt="<%= manga.title %>" class="manga-cover" onerror="this.src='/images/default-cover.png'">
      <div class="manga-details">
        <h1 class="manga-title"><%= manga.title %></h1>
        <div class="manga-info">
          <div class="info-item">
            <div class="info-label">Author</div>
            <div class="info-value"><%= manga.author %></div>
          </div>
          <div class="info-item">
            <div class="info-label">Status</div>
            <div class="info-value"><%= manga.status %></div>
          </div>
          <div class="info-item">
            <div class="info-label">Genres</div>
            <div class="info-value"><%= Array.isArray(manga.genres) ? manga.genres.join(', ') : manga.genres %></div>
          </div>
          <div class="info-item">
            <div class="info-label">Total Chapters</div>
            <div class="info-value"><%= chapters.length %></div>
          </div>
        </div>
      </div>
    </div>

    <% if (chapters.length > 0) { %>
      <div class="button-group">
        <a href="<%= chapters[0].content_url %>" class="action-btn" target="_blank">Read First</a>
        <a href="<%= chapters[chapters.length - 1].content_url %>" class="action-btn" target="_blank">Read Last</a>
      </div>

      <div class="chapter-container">
        <h3>Chapters</h3>
        <ul class="chapter-list">
          <% chapters.forEach((chapter, index) => { %>
            <li class="chapter-item">
              <span class="chapter-title">Chapter <%= chapter.chapter_number %>: <%= chapter.title %></span>
              <a href="<%= chapter.content_url %>" class="read-btn" target="_blank">Read</a>
            </li>
          <% }) %>
        </ul>
      </div>
    <% } else { %>
      <div class="chapter-container">
        <p>No chapters uploaded for this manga.</p>
      </div>
    <% } %>
  </div>
</body>
</html>