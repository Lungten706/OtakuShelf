<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>
    <%= currentChapter.title %> | OtakuShelf
  </title>
  <link rel="stylesheet" href="/css/readChapter.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body>
  <header>
    <nav>
      <h2>OtakuShelf</h2>
      <ul>
        <li><a href="/home">Home</a></li>
        <li><a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
      </ul>
    </nav>

    <!-- Flex container -->
    <div class="chapter-header">
      <div class="breadcrumb">
        HOME &gt; <%= manga.title %> &gt; <strong>CHAPTER <%= currentChapter.chapter_number %></strong>
      </div>

      <div class="controls">
        <% if (prevChapter) { %>
          <a href="/OtakuShelf/<%= manga.title.replace(/\s+/g, '-').toLowerCase() %>/<%= prevChapter.chapter_number %>">
            <button><i class="fa fa-chevron-left"></i></button>
          </a>
          <% } %>

            <% if (nextChapter) { %>
              <a
                href="/OtakuShelf/<%= manga.title.replace(/\s+/g, '-').toLowerCase() %>/<%= nextChapter.chapter_number %>">
                <button><i class="fa fa-chevron-right"></i></button>
              </a>
              <% } %>
      </div>
    </div>
  </header>

  <div class="pdf-container">
    <iframe src="<%= currentChapter.content_url %>#toolbar=0&navpanes=0" class="pdf-viewer">
    </iframe>
  </div>
</body>

</html>